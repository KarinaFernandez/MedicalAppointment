<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">
    tools:context=".ScheduleActivity">
    <TextView
        android:id="@+id/appointmentMessage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/scheduleText"
        android:textColor="#2196F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:text="@string/name"
        tools:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/appointmentMessage"
        />

    <TextView
        android:id="@+id/doctorSurname"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/doctorName"
        android:text="@string/surname"
        android:textStyle="bold"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="date"
        tools:text="@string/date"
        tools:textSize="18sp"
        android:layout_below="@id/doctorName"
        />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:datePickerMode="calendar"
        android:layout_below="@id/date"/>

    <Button
        android:id="@+id/appointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="RESERVAR"
        android:layout_below="@id/datePicker"/>
</RelativeLayout>